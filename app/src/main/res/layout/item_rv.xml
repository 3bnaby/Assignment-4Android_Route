<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/rounded_shape"
    android:layout_marginTop="15dp"
    android:layout_marginHorizontal="20dp"
    android:id="@+id/items_rv"
    android:paddingVertical="5dp"
    >
    <ImageView
        android:id="@+id/arrow_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_forward_ios_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="15dp"

        />
    <ImageView
        android:id="@+id/person_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/contact_name_rv"
        android:src="@drawable/person_rv"
        android:layout_marginStart="20dp"
        />
    <TextView
        android:id="@+id/contact_name_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/person_icon"
        app:layout_constraintTop_toTopOf="@id/person_icon"
        tools:text="Mahmoud Abdelnabi"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/blue_black"
        />
    <TextView
        android:id="@+id/contact_phone_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/person_icon"
        app:layout_constraintStart_toEndOf="@+id/person_icon"
        tools:text="01094478729"
        android:layout_marginStart="10dp"
        android:textColor="@color/blue_black"
        />
</androidx.constraintlayout.widget.ConstraintLayout>